<mvc:View controllerName="project.SpeehDemo.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Speech Demo">
					<content>
						<SearchField id="txtSearch" liveChange="onSearch" width="100%"/>
						
					</content>
						<footer>
					<OverflowToolbar>
						<content>
							<ToolbarSpacer/>
							<Button id="btnSpeech" icon="sap-icon://microphone" press="_searchBySpeech" type="Emphasized" tooltip="Speak"/>
							<Button id="btnCancel" icon="sap-icon://decline" press="_cancelSpeech" visible="false" type="Emphasized" tooltip="Cancel"/>
							<ToolbarSpacer/>
						</content>
					</OverflowToolbar>
				</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>